[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[dev-packages]
autopep8 = "*"
flake8 = "*"
pytest = "*"

[packages]
flask = "*"
flask-sqlalchemy = "*"
flask-migrate = "*"
